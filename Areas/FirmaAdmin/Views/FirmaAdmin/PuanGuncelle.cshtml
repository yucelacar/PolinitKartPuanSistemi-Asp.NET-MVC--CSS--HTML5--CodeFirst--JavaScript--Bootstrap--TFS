@model PolinitKartSistemi.Models.Firma
@{
    Layout = "~/Areas/FirmaAdmin/Views/Shared/_FirmaAdminLayoutPage.cshtml";
}

<script src="~/js/jquery.min.js"></script>
<script src="~/js/jquery-3.2.1.min.js"></script>
<script src="~/js/jquery.maskedinput.min.js"></script>
<link href="~/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .form-control {
        width: 500px;
    }
</style>

@section menu{
    <ul class="sidebar-menu">
        <li>
            @Html.ActionLink("Kasiyer Tanımla", "KasiyerTanimla", "FirmaAdmin", new { veri = ViewBag.ID }, null)
        </li>
        <li>
            @Html.ActionLink("Puan Güncelle", "PuanGuncelle", "FirmaAdmin", new { veri=ViewBag.ID }, null)
        </li>

    </ul>
}

@using (Html.BeginForm("PuanGuncelle", "FirmaAdmin", FormMethod.Post, new { @class = "form-group" }))
{
    <div class="form-group" style="margin-top:200px">
        <label class="col-sm-2 control-label">Birim Puan Yüzdesi</label>
        <div class="col-sm-10" style="margin-bottom:20px">
            @Html.TextBoxFor(model => model.BirimPuan, new { @class = "form-control", placeholder = "Ör:0,05" })
            @if (ViewBag.Sonuc != null)
            {
            <div class="alert alert-@ViewBag.Sonuc">
                <span class="@ViewBag.Icon"></span>
                @ViewBag.Mesaj

            </div>
            }
            @Html.HiddenFor(model => model.FirmaID)
            @*<input type="text" class="form-control" placeholder="Müşteri Kart No">*@
        </div>

        <div class="col-sm-4 col-sm-offset-2">

            <input class="form-control btn btn-primary" type="submit" value="Puan Güncelle" )" />
        </div>
    </div>
    

}
